# DockerFolder/Dockerfile.backend

FROM node:16-alpine
WORKDIR /app

# Copy package files and install dependencies first (for layer caching)
COPY Backend/package*.json /app/
RUN npm install --only=production

# Copy the rest of the backend code
COPY Backend/. /app/

# Ensure the .env file is in the image (if needed for build or default values; optional here)
# COPY DockerFolder/.env /app/

EXPOSE 5000  

# Start the Node server
CMD ["node", "index.js"]
